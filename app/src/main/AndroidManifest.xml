<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="mx.juanma.multitask">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity
            android:name=".modules.Preloader.PreloaderActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".modules.CreateAccount.CreateAccountActivity"
            android:label="@string/create_account"
            android:screenOrientation="portrait" />
        <activity
            android:name=".modules.Login.LoginActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".modules.Main.MainActivity"
            android:screenOrientation="portrait" />

        <activity android:name=".modules.AddCategory.AddCategoryActivity"
            android:label="@string/new_category"
            android:screenOrientation="portrait"/>

        <activity android:name=".modules.Categories.CategoriesActivity"
            android:label="@string/categories"
            android:screenOrientation="portrait"/>

        <activity android:name=".modules.EditCategory.EditCategoryActivity"
            android:label="@string/edit_category"
            android:screenOrientation="portrait"/>
    </application>

</manifest>